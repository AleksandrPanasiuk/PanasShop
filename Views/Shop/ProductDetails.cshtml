        $(function () {
            $("a.addtocart").click(function (e) {
                e.preventDefault();

                $(".loader").addClass("visible")

                var url = "/cart/AddToCartPartial";

                $.get(url, { id: @Model.Id},
                    function (data) {
                    $(".ajax-cart").html(data);
                }).done(function () {
                    $(".loader").removeClass("visible");
                    $(".ajaxmsg").css("opacity","1");

                    setTimeout(function () {
                        $(".ajaxmsg").fadeTo(400,0);
                    },2000);
                });
            });
        });
